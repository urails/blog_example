<h2>New Article</h2>

<%= link_to "Back to Blog Posts", blog_posts_path %>

<% if @blog_post.errors.count > 0 %>
  <div class="alert alert-danger">
    <ul>
      <% @blog_post.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@blog_post) do |f| %>
<p><%= f.text_field :title %></p>
<p><%= f.text_area :content %></p>
<p><%= f.submit "Update Article" %></p>
<% end %>
